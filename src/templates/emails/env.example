# ========================================
# CONFIGURACIÓN DEL SISTEMA DE EMAILS
# ========================================

# Proveedor de email (resend, sendgrid, nodemailer)
EMAIL_PROVIDER=resend

# API Key del proveedor seleccionado
EMAIL_API_KEY=tu_api_key_aqui

# Email remitente
FROM_EMAIL=info@coachingia.com
FROM_NAME=CoachingIA

# ========================================
# CONFIGURACIÓN SMTP (solo para nodemailer)
# ========================================

# Host del servidor SMTP
SMTP_HOST=smtp.gmail.com

# Puerto del servidor SMTP (587 para TLS, 465 para SSL)
SMTP_PORT=587

# Usuario SMTP
SMTP_USER=tu_email@gmail.com

# Contraseña SMTP (usar contraseña de aplicación para Gmail)
SMTP_PASS=tu_password_aqui

# ========================================
# CONFIGURACIÓN DE LA EMPRESA
# ========================================

# Estas configuraciones se pueden modificar en emailService.ts
# o se pueden hacer configurables via variables de entorno

# Nombre de la empresa
COMPANY_NAME=CoachingIA

# Email de contacto
COMPANY_EMAIL=info@coachingia.com

# Teléfono de contacto
COMPANY_PHONE=+54 11 1234-5678

# Dirección física
COMPANY_ADDRESS=Buenos Aires, Argentina

# Sitio web
COMPANY_WEBSITE=https://coachingia.com

# ========================================
# URLs IMPORTANTES
# ========================================

# URL para cancelar suscripción
UNSUBSCRIBE_URL=https://coachingia.com/unsubscribe

# URL de política de privacidad
PRIVACY_URL=https://coachingia.com/privacy

# URL del dashboard
DASHBOARD_URL=https://coachingia.com/dashboard

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Modo de desarrollo (envía emails a una dirección específica)
NODE_ENV=development

# Email de prueba para desarrollo
DEV_EMAIL=test@coachingia.com

# ========================================
# PROVEEDORES ESPECÍFICOS
# ========================================

# Para Resend (recomendado)
# EMAIL_PROVIDER=resend
# EMAIL_API_KEY=re_123456789abcdef

# Para SendGrid
# EMAIL_PROVIDER=sendgrid
# EMAIL_API_KEY=SG.123456789abcdef

# Para Nodemailer con Gmail
# EMAIL_PROVIDER=nodemailer
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_app_password

